<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – Admin Area</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <!-- <a class="navbar-brand" href="/admin/dashboard">Dashboard</a>--> @Html.ActionLink("Dashboard", "Index", "Dashboard", "", new { @class = "navbar-brand" }) <!--Добавить ссылку-->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                     @Html.ActionLink("Pages", "Index", "Pages", "", new {@class = "nav-link" }) <!--Урок 6-->
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Sidebar", "EditSidebar", "Pages", "", new { @class = "nav-link" }) <!--Урок 6-->
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Categories", "Categories", "Shop", "", new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Products", "Products", "Shop", "", new { @class = "nav-link" })
                </li>
            </ul>

            <!--New right menu-->
            <ul class="navbar-nav ml-auto">
                <li>
                    <a href="/" class="navbar-brand" target="_blank">Shopping Cart</a>
                </li>
            </ul>


        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year – приложение ASP.NET</p>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")

    <!--Подключаем бандл к сайту (Урок 5)-->
    @Scripts.Render("~/bundles/jqueryui")

    <!--Подключаем бандл визуального редактора (Урок 7)-->
    @Scripts.Render("~/bundles/CKEditor");

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
    </html>
